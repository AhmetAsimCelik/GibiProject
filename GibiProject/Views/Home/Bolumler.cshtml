@using GibiProject.Entities
@model List<Bolum>
@{
    ViewBag.Title = "Bolumler";
}

<div class=" row">
    @foreach (Bolum item in Model)
    {
        <div class="col-sm-3">


            <div class="card" style="width: 18rem;">
                <img src="~/Content/img/@item.BolumFoto" class="card-img-top" alt="..." width="100" height="300">
                <div class="card-body">
                    <h5 class="card-title">@item.BolumSezon. Sezon @item.BolumNumara. Bölüm</h5>
                    <h6 class="card-title">@item.BolumAdi</h6>
                    <p class="card-text">@item.Aciklama</p>
                    <a href="#" class="btn btn-primary">Bölümler</a>
                </div>
            </div>

        </div>
    }



</div>

