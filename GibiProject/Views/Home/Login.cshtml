
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
 <head>
     <meta name="viewport" content="width=device-width" />
     <title>login2</title>
     <link href="~/Content/style.css" rel="stylesheet" />
 </head>
 <bodylogin>
 
     <bodylogin>
         <div class="main">
             <input type="checkbox" id="chk" aria-hidden="true">
 
             <div class="signup">
                 <form>
                     <label for="chk" aria-hidden="true">Kayıt Ol</label>
                     <input type="text" name="txt" placeholder="User name" required="">
                     <input type="email" name="email" placeholder="Email" required="">
                     <input type="password" name="pswd" placeholder="Password" required="">
                     <button>Kayıt Ol</button>
                 </form>
             </div>
 
             <div class="login">
                 <form>
                     <label for="chk" aria-hidden="true">Giriş</label>
                     <input type="email" name="email" placeholder="Kullanıcı Adı" required="">
                     <input type="password" name="pswd" placeholder="Şifre" required="">
                     <button>Giriş</button>
                 </form>
             </div>
         </div>
     </bodylogin>
 </bodylogin>

</html>



